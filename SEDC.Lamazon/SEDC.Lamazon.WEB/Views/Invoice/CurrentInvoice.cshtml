@model List<InvoiceViewModel>

<div class="container mt-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-8">
            @foreach (var item in Model)
            {
                <div class="p-3 bg-white rounded">
                    <div class="row">
                        <div class="col-md-6">
                            <h1 class="text-uppercase">Invoice</h1>
                            <p class="display-4">Thanks for your order!</p>
                            <div class="billed"><span class="font-weight-bold text-uppercase">Billed:</span><span class="ml-1">@item.From</span></div>
                            <div class="billed"><span class="font-weight-bold text-uppercase">Date:</span><span class="ml-1">@item.Date</span></div>
                            <div class="billed"><span class="font-weight-bold text-uppercase">Order ID:</span><span class="ml-1">@item.Id</span></div>
                        </div>
                        <div class="col-md-6 text-right mt-3">
                            <h4 class="text-danger mb-0">@item.To</h4>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>INVOICE NUMBER: @item.InvoiceNumber</th>
                                        <th>TAX: @item.Tax</th>
                                        <th>TOTAL: @item.Total</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div class="text-right mb-3"><button class="btn btn-danger btn-sm mr-5" type="button" asp-action="Payment" asp-controller="Invoice" asp-route-invoiceId="@item.Id">Pay Now</button></div>
                </div>
            }
        </div>
    </div>
</div>